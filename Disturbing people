#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define ph push_back

int main()
{
  #ifndef ONLINE_JUDGE
  freopen("input.txt", "r", stdin);
  freopen("output.txt", "w", stdout);
  #endif
  ll n;
  cin>>n;
  ll a[n];
  for(ll i=0;i<n;i++)
  {
  	cin>>a[i];
  }
  ll count=0, c=INT_MAX;
  for(ll i=1;i<=n-2;i++)
  {
  	if(a[i-1]==1 && a[i]==0 && a[i+1]==1)
  	{
  	
  		if(c!=i-2)
  		{
  			c=i;
  			count++;
  	}
  }
}
cout<<count;
  return 0;
  
}






